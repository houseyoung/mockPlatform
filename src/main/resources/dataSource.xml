	<!-- 分页 -->
	<bean id="paginationInterceptor" class="com.mockCommon.dao.pagination.PaginationInterceptor">
		<property name="dialect">
			<bean class="com.mockCommon.dao.pagination.dialect.OracleDialect" />
		</property>
		<property name="paginationSqlRegEx" value=".*ByCond"></property>
	</bean>

	<!--mybatis与Spring整合  -->
    <bean id="sqlSessionFactoryMock" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="configLocation" value="classpath:MockSqlMapConfig.xml"/>
	    <property name="dataSource" ref="dataSourceMock"/>
		<property name="plugins">
	 		<array>
	 			<ref bean="paginationInterceptor"/>
	 			<ref bean="offsetLimitInterceptor"/>
	 		</array>
	 	</property>
    </bean>
    <bean id="sqlSessionFactoryInsr" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="configLocation" value="classpath:InsrSqlMapConfig.xml"/>
	    <property name="dataSource" ref="dataSourceInsr"/>
